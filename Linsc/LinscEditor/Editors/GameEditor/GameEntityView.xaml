<UserControl x:Class="LinscEditor.Editors.GameEditor.GameEntityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LinscEditor.Editors.GameEditor"
             xmlns:helpers="clr-namespace:LinscEditor.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="540" d:DesignWidth="400">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="80*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=Explicit}"
                     GotKeyboardFocus="OnName_TextBox_GotKeyboardFocus"
                     LostKeyboardFocus="OnName_TextBox_LostKeyboardFocus"/>
            <CheckBox Grid.Column="2" IsChecked="{Binding IsEnabled, Mode=OneWay}" 
                      HorizontalAlignment="Center" VerticalAlignment="Center"
                      Click="OnIsEnabled_CheckBox_Click"/>
        </Grid>
        <ItemsControl ItemsSource="{Binding Components}" Foreground="White">
        </ItemsControl>
    </StackPanel>
</UserControl>
